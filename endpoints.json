{
  "GET /api": {
      "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
      "description": "serves an array of all topics",
      "queries": [],
      "exampleResponse": {
          "topics": [
              {
                  "slug": "football",
                  "description": "Footie!"
              }
          ]
      }
  },
  "GET /api/articles": {
      "description": "serves an array of all articles",
      "exampleResponse": {
          "articles": [
              {
                  "author": "jessjelly",
                  "title": "Running a Node App",
                  "article_id": 1,
                  "topic": "coding",
                  "created_at": "2020-11-03T21:00:00.000Z",
                  "votes": 0,
                  "article_img_url": "https://images.pexels.com/photos/97050/pexels-photo-97050.jpeg",
                  "comment_count": 8
              }
          ]
      }
  },
  "GET /api/articles/:article_id": {
      "description": "returns an article by its id",
      "queries": [],
      "exampleResponse": {
          "article": {
              "author": "jessjelly",
              "title": "Running a Node App",
              "article_id": 1,
              "body": "This is part two of a series on how to get up and running with a Node app...",
              "topic": "coding",
              "created_at": "2020-11-03T21:00:00.000Z",
              "votes": 0,
              "article_img_url": "https://images.pexels.com/photos/97050/pexels-photo-97050.jpeg",
              "comment_count": 8
          }
      }
  },
  "GET /api/articles/:article_id/comments": {
      "description": "serves an array of comments for the given article_id",
      "queries": [],
      "exampleResponse": {
          "comments": [
              {
                  "comment_id": 1,
                  "votes": 16,
                  "created_at": "2020-11-03T21:00:00.000Z",
                  "author": "butter_bridge",
                  "body": "This is a comment body."
              }
          ]
      }
  },
  "POST /api/articles/:article_id/comments": {
      "description": "Add a new comment to the specified article.",
      "requestBody": {
          "username": "butter_bridge",
          "body": "Great article!"
      },
      "exampleResponse": {
          "comment": {
              "comment_id": 19,
              "body": "Great article!",
              "article_id": 1,
              "author": "butter_bridge",
              "votes": 0,
              "created_at": "2024-05-08T13:00:00.000Z"
          }
      },
      "errors": [
          {
              "status": 400,
              "msg": "Bad Request: Invalid article ID"
          },
          {
              "status": 400,
              "msg": "Bad Request: Missing required fields"
          },
          {
              "status": 404,
              "msg": "Article not found"
          }
      ]
  }
}